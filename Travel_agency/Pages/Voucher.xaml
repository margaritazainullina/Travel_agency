<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Travel_agency.Pages.Voucher"
      WindowTitle="Путевки"
    Loaded="OnInit" 
    Width="800" d:DesignHeight="600">

    <Page.Background>
        <ImageBrush ImageSource="/Travel_agency;component/Images/bgn.png"/>
    </Page.Background>
    
    <Grid>
        <Label Style="{StaticResource LabelStyle}" FontSize="36" Content="Путевки" Margin="262,10,321,531" RenderTransformOrigin="0.475,0.475"/>

        <DataGrid x:Name="dataGridRoutes"  AutoGeneratedColumns="hideCol" 
        		ItemsSource="{Binding routes}"
        		DisplayMemberPath="" Margin="271,135,10,76" />
            <Button x:Name="updateBtn" Content="Изменить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="20"/>
            <Button x:Name="deleteBtn" Content="Удалить" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Height="20"/>
            <Label Style="{StaticResource LabelStyle}" Content="Поиск по названию тура" Margin="622,27,0,539"/>
            <TextBox x:Name="tour_nTB" Height="23" TextWrapping="Wrap" Text="" Margin="626,69,10,508"/>
        <Button x:Name="updateBtn_Copy" Click="updateBtn_Copy_Click"
    			HorizontalAlignment="Center" 
    			VerticalAlignment="Center" Height="26" Margin="667,98,10,476" Width="123">
            <StackPanel Orientation="Horizontal" Width="153">
                <Image Source="/Travel_agency;component/Icons/binoculars_128_6440.ico"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="  Поиск" FontFamily="SegoeUI Light" FontWeight="Light" FontSize="14"/></TextBlock>
            </StackPanel>
        </Button>

        <Label Style="{StaticResource LabelStyle}" x:Name = "countryLbl" Content="Страна:" HorizontalAlignment="Left" Margin="262,59,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding countries}" x:Name = "countryCmb" HorizontalAlignment="Left" Margin="332,69,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="countryCmb_SelectionChanged">
        </ComboBox>
        <Label Style="{StaticResource LabelStyle}" x:Name = "cityLbl" Content="Город:" HorizontalAlignment="Left" Margin="262,88,0,0" VerticalAlignment="Top" Height="36"/>
        <ComboBox ItemsSource="{Binding cities}" HorizontalAlignment="Left" x:Name = "cityCmb" Margin="332,102,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cityCmb_SelectionChanged">
        </ComboBox>

        <Button Click="Button_Click_1"
    			HorizontalAlignment="Center" 
    			VerticalAlignment="Center" Height="50" Margin="401,536,230,14" Width="169">
            <StackPanel Orientation="Horizontal" Width="184">
                <Image Source="/Travel_agency;component/Icons/07_calendar.ico"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="  Заезды тура" FontFamily="SegoeUI Light" FontWeight="Light" FontSize="14"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Click="Button_Click_2"
    			HorizontalAlignment="Center" 
    			VerticalAlignment="Center" Height="50" Margin="575,536,10,14" Width="215">
            <StackPanel Orientation="Horizontal" Width="214">
                <Image Source="/Travel_agency;component/Icons/search_9654.ico"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="162"><Run Text="  Детальная информация" FontFamily="SegoeUI Light" FontWeight="Light" FontSize="14"/></TextBlock>
            </StackPanel>
        </Button>

    <Image Source="/Travel_agency;component/Images/side panel images/Fish_wallpapers_424.jpg" Margin="-5,0,563,0"/>
    <Rectangle Margin="237,0,543,0" RenderTransformOrigin="0.5,0.5">
        <Rectangle.Fill>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#33FFFFFF" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Rectangle.Fill>
    </Rectangle>

        <Rectangle Margin="-5,0,563,0" RenderTransformOrigin="0.5,0.5" Fill="#7FFFFFFF"/>
        <Button x:Name="addBtn"  Click="Button_Click_3"
    			HorizontalAlignment="Center" 
    			VerticalAlignment="Center" Height="50" Margin="276,536,470,14" Width="54">
            <StackPanel Orientation="Horizontal" Width="44">
                <Image Source="/Travel_agency;component/Icons/add1-_4474.ico"/>
            </StackPanel>
        </Button>

        <Button x:Name="delBtn" 
    			HorizontalAlignment="Center" 
    			VerticalAlignment="Center" Height="50" Margin="335,536,411,14" Width="54" Click="delBtn_Click">
            <StackPanel Orientation="Horizontal" Width="44">
                <Image Source="/Travel_agency;component/Icons/edit-delete_1097.ico"/>
            </StackPanel>
        </Button>
        
    </Grid>
</Page>
