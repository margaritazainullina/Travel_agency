<Page x:Class="Travel_agency.Pages.Hotel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Hotel">

    <Page.Background>
        <ImageBrush ImageSource="/Travel_agency;component/Images/bgn.png"/>
    </Page.Background>

    <Grid  Height="600" Width="800">

        <DataGrid x:Name="dataGridHotels" 
        		ItemsSource="{Binding hotels}" AutoGeneratedColumns="hideCol" 
        		DisplayMemberPath=""  Margin="290,116,24,174" SelectedCellsChanged ="dataGridHotels_SelectedCellsChanged_1" IsReadOnly="True" />

        <DataGrid x:Name="dataGridHotelDetails" 
        		ItemsSource="{Binding hotelDetails}"
        		DisplayMemberPath=""  Margin="290,457,24,35" IsReadOnly="True" />
        <RadioButton  Style="{StaticResource RBStyle}" Checked="setSeason" Unchecked="setSeason" x:Name="lowRb" Content="Низкий сезон" HorizontalAlignment="Left" Margin="534,431,0,0" VerticalAlignment="Top" Height="21" Width="114"/>
        <RadioButton Style="{StaticResource RBStyle}" IsChecked="True" Checked="setSeason" Unchecked="setSeason" x:Name="highRb" Content="Высокий сезон" HorizontalAlignment="Left" Margin="653,431,0,0" VerticalAlignment="Top" Height="21" Width="102"/>
        <Label  x:Name="hotelLbl" Style="{StaticResource LabelStyle}" FontSize="36"  Content="Отели" HorizontalAlignment="Left" Margin="290,-1,0,0" VerticalAlignment="Top" Height="56" Width="486"/>
        <Label Style="{StaticResource LabelStyle}" x:Name = "countryLbl" Content="Страна:" HorizontalAlignment="Left" Margin="290,48,0,0" VerticalAlignment="Top"  />
        <ComboBox ItemsSource="{Binding countries}" x:Name = "countryCmb" HorizontalAlignment="Left" Margin="370,55,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="countryCmb_SelectionChanged"/>

        <Label x:Name = "cityLbl" Content="Город:" Style="{StaticResource LabelStyle}" HorizontalAlignment="Left" Margin="290,77,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding cities}" HorizontalAlignment="Left" x:Name = "cityCmb" Margin="370,83,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cityCmb_SelectionChanged"/>
        <Label Content="Поиск по названию отеля"  Style="{StaticResource LabelStyle}" Margin="508,43,114,520" />
        <TextBox x:Name="tour_nTB" TextWrapping="Wrap" Text="" Margin="508,80,152,495" />
        <Button x:Name="updateBtn_Copy" Click="updateBtn_Copy_Click"
    			HorizontalAlignment="Center" 
    			VerticalAlignment="Center" Height="26" Margin="653,79,24,495" Width="123">
            <StackPanel Orientation="Horizontal" Width="153">
                <Image Source="/Travel_agency;component/Icons/binoculars_128_6440.ico"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="  Поиск" FontFamily="SegoeUI Light" FontWeight="Light" FontSize="14"/></TextBlock>
            </StackPanel>
        </Button>


        <Image Source="/Travel_agency;component/Images/side panel images/hotelSide.jpg" Margin="0,0,554,0"/>
        <Rectangle Margin="246,0,534,0" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#33FFFFFF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Margin="-5,0,554,0" RenderTransformOrigin="0.5,0.5" Fill="#7FFFFFFF"/>
    </Grid>
</Page>
