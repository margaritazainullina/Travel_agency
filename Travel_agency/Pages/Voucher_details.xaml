<Window x:Class="Travel_agency.Pages.Voucher_details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о путевке" Height="300" Width="400">

    <Window.Background>
        <ImageBrush ImageSource="/Travel_agency;component/Images/bgn.png"/>
    </Window.Background>
    
    <Grid>
        <DataGrid x:Name="dataGridDetails" IsReadOnly="True"
        		ItemsSource="{Binding details}"
        		DisplayMemberPath="" Margin="10,57,10,10" />
        <Label Style="{StaticResource LabelStyle}" x:Name="lbl" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="42" Width="322">
        </Label>
    </Grid>
        
</Window>
