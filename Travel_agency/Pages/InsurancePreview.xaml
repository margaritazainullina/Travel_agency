<Window x:Class="Travel_agency.Pages.InsurancePreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Страховой полис" Height="500" Width="600">
    
        <Window.Background>
            <ImageBrush ImageSource="/Travel_agency;component/Images/bgn.png"/>
        </Window.Background>
    
       <Grid Width="600" Margin="0,0,0,0"> 
        <Button  Click="Button_Click_1"
            	HorizontalAlignment="Center" 
            	VerticalAlignment="Center" Height="50" Width="162" Margin="221,403,217,10">
            <StackPanel Orientation="Horizontal" Width="184">
                <Image Source="/Travel_agency;component/Icons/hp_printer.ico"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="  Печать" FontFamily="SegoeUI Light" FontWeight="Light" FontSize="14"/></TextBlock>
            </StackPanel>
        </Button>

        <RichTextBox x:Name="reportRtb" HorizontalAlignment="Left" Height="388" Margin="10,10,0,0" VerticalAlignment="Top" Width="572" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
