<Window x:Class="Travel_agency.Pages.OrderPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказ" Height="500" Width="600">
    
    <Window.Background>
        <ImageBrush ImageSource="/Travel_agency;component/Images/bgn.png"/>
    </Window.Background>

    <Grid>

        <Button  Click="Button_Click_1"
            	HorizontalAlignment="Center" 
            	VerticalAlignment="Center" Height="50" Width="164" Margin="226,409,202,10">
            <StackPanel Orientation="Horizontal" Width="184">
                <Image Source="/Travel_agency;component/Icons/hp_printer.ico"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="  Печать" FontFamily="SegoeUI Light" FontWeight="Light" FontSize="14"/></TextBlock>
            </StackPanel>
        </Button>


        <RichTextBox x:Name="reportRtb" HorizontalAlignment="Left" Height="394" Margin="10,10,0,0" VerticalAlignment="Top" Width="572" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
